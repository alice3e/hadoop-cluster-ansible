<?xml version="1.0"?>
<configuration>
  <property>
    <name>yarn.resourcemanager.hostname</name>
    <value>{{ hostvars[groups['hadoop_master'][0]]['internal_ip'] }}</value>
  </property>
  <property>
    <name>yarn.resourcemanager.address</name>
    <value>{{ hostvars[groups['hadoop_master'][0]]['internal_ip'] }}:8032</value>
  </property>
  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>{{ hostvars[groups['hadoop_master'][0]]['internal_ip'] }}:8030</value>
  </property>
  <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>{{ hostvars[groups['hadoop_master'][0]]['internal_ip'] }}:8031</value>
  </property>
  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>
  <property>
    <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
    <value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>
  <property>
    <name>yarn.nodemanager.local-dirs</name>
    <value>/usr/local/hadoop/yarn/local</value>
  </property>
  <property>
    <name>yarn.nodemanager.log-dirs</name>
    <value>/usr/local/hadoop/yarn/logs</value>
  </property>
</configuration>